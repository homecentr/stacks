version: '3.2'
services:
  agent:
    image: homecentr/portainer-agent
    environment:
      PUID: "{{ cnt_uid }}"
      PGID: "{{ cnt_gid }}"
      LOG_LEVEL: "debug"
      AGENT_CLUSTER_ADDR: tasks.agent
      AGENT_SECRET: "some-very-secure-value"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - agent_network
    deploy:
      mode: global
      
  portainer:
    image: homecentr/portainer
    environment:
      PUID: "{{ cnt_uid }}"
      PGID: "{{ cnt_gid }}"
      PORTAINER_ARGS: "-H tcp://tasks.agent:9001 --tlsskipverify --no-auth"
      AGENT_SECRET: "some-very-secure-value"
    ports:
      - "9000:9000"
      - "8000:8000"
    volumes:
      - portainer_data:/data
    networks:
      - agent_network
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]

networks:
  agent_network:
    driver: overlay
    attachable: true

volumes:
  portainer_data: