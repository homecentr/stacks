acl "trusted" {
  {{ subnet_servers_cidr }};
  // TODO: Add home network cidr
};

options {
        directory "/config";

        recursion yes;
        allow-recursion { any; };
        listen-on { any; };
        allow-transfer { localhost; {{ dns_slave_ip }}; };

        dnssec-enable yes;
        dnssec-validation auto;
        dnssec-lookaside auto;

        forwarders {
                {% for forwarder in dns_forwarders %}{{ forwarder }};{% endfor %}
        };
};

managed-keys { . initial-key 257 3 8 ""; };

key "slave_key" {
        algorithm HMAC-SHA512;
        secret "{{ dns_secret }}";
};

// Root zone
zone "{{ dns_root_domain }}" {
        type master;
        file "root.zone";

        allow-update { none; };
        notify yes;
        also-notify { {{ dns_slave_ip }}; };
        
        allow-transfer {
                key "slave_key";
        };

        inline-signing yes;
        auto-dnssec maintain;
};

// Servers subnet reverse zone
zone "{{ subnet_servers_domain }}.in-addr.arpa" {
        type master;
        file "servers_reverse.zone";

        allow-update { none; };
        notify yes;
        also-notify { {{ dns_slave_ip }}; };
        
        allow-transfer {
                key "slave_key";
        };
};

statistics-channels {
  inet * port 8888 allow { 10.0.0.0/8; };
};